<% if session[:url] %>
    <a href="<% session[:url].original %>"><h2><%= session[:url].shortened_url %></h2></a>
<% end %>
             
<form class="form-inline" action="/shorten" method="post">
    <div class="form-group">
        <input class="form-control input-lg" type="text" name="url" size="35">
        <input type="submit" class="btn btn-primary btn-lg">                      
    </div>
</form>
